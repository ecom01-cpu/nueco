{% comment %} Nue Product Slider Section {% endcomment %}

{{ 'nue-product-slider.css' | asset_url | stylesheet_tag }}
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="nue-product-slider-section section-{{ section.id }}-padding" data-section-id="{{ section.id }}">
  <div class="">
    {% if section.settings.heading != blank %}
      <h2 class="nue-product-slider-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="swiper nue-product-slider">
      <div class="swiper-wrapper">
        {% if section.settings.collection != blank %}
          {% comment %} Render collection products when collection is selected {% endcomment %}
          {% for product in section.settings.collection.products limit: 200 %}
            <div class="swiper-slide">
              <a href="{{ product.url }}" class="nue-product-slide-link">
                <div class="nue-product-slide-image">
                  {% if product.metafields.custom.main_image %}
                    {% comment %} Priority 1: Product metafield image {% endcomment %}
                    <img 
                      src="{{ product.metafields.custom.main_image | image_url: width: 400 }}"
                      srcset="{{ product.metafields.custom.main_image | image_url: width: 200 }} 200w,
                              {{ product.metafields.custom.main_image | image_url: width: 400 }} 400w,
                              {{ product.metafields.custom.main_image | image_url: width: 600 }} 600w"
                      sizes="(min-width: 750px) 33vw, 50vw"
                      alt="{{ product.metafields.custom.main_image.alt | default: product.title }}"
                      loading="lazy"
                      width="{{ product.metafields.custom.main_image.width }}"
                      height="{{ product.metafields.custom.main_image.height }}"
                    >
                  {% elsif product.featured_image %}
                    {% comment %} Priority 2: Product featured image {% endcomment %}
                    <img 
                      src="{{ product.featured_image | image_url: width: 400 }}"
                      srcset="{{ product.featured_image | image_url: width: 200 }} 200w,
                              {{ product.featured_image | image_url: width: 400 }} 400w,
                              {{ product.featured_image | image_url: width: 600 }} 600w"
                      sizes="(min-width: 750px) 33vw, 50vw"
                      alt="{{ product.featured_image.alt | default: product.title }}"
                      loading="lazy"
                      width="{{ product.featured_image.width }}"
                      height="{{ product.featured_image.height }}"
                    >
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
                <div class="nue-product-slide-info">
                  <h3 class="nue-product-slide-title">{{ product.title }}</h3>
                </div>
              </a>
            </div>
          {% endfor %}

          {% comment %} Duplicate for loop effect {% endcomment %}
          {% for product in section.settings.collection.products limit: 100 %}
            <div class="swiper-slide">
              <a href="{{ product.url }}" class="nue-product-slide-link">
                <div class="nue-product-slide-image">
                  {% if product.metafields.custom.main_image %}
                    {% comment %} Priority 1: Product metafield image {% endcomment %}
                    <img 
                      src="{{ product.metafields.custom.main_image | image_url: width: 400 }}"
                      srcset="{{ product.metafields.custom.main_image | image_url: width: 200 }} 200w,
                              {{ product.metafields.custom.main_image | image_url: width: 400 }} 400w,
                              {{ product.metafields.custom.main_image | image_url: width: 600 }} 600w"
                      sizes="(min-width: 750px) 33vw, 50vw"
                      alt="{{ product.metafields.custom.main_image.alt | default: product.title }}"
                      loading="lazy"
                      width="{{ product.metafields.custom.main_image.width }}"
                      height="{{ product.metafields.custom.main_image.height }}"
                    >
                  {% elsif product.featured_image %}
                    {% comment %} Priority 2: Product featured image {% endcomment %}
                    <img 
                      src="{{ product.featured_image | image_url: width: 400 }}"
                      srcset="{{ product.featured_image | image_url: width: 200 }} 200w,
                              {{ product.featured_image | image_url: width: 400 }} 400w,
                              {{ product.featured_image | image_url: width: 600 }} 600w"
                      sizes="(min-width: 750px) 33vw, 50vw"
                      alt="{{ product.featured_image.alt | default: product.title }}"
                      loading="lazy"
                      width="{{ product.featured_image.width }}"
                      height="{{ product.featured_image.height }}"
                    >
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                </div>
                <div class="nue-product-slide-info">
                  <h3 class="nue-product-slide-title">{{ product.title }}</h3>
                </div>
              </a>
            </div>
          {% endfor %}
        {% else %}
          {% comment %} Render individual product blocks when no collection is selected {% endcomment %}
          {% for block in section.blocks %}
            {% assign product = block.settings.product %}
            <div class="swiper-slide" {{ block.shopify_attributes }}>
              {% if product != blank %}
                <a href="{{ product.url }}" class="nue-product-slide-link">
                  <div class="nue-product-slide-image">
                    {% if block.settings.custom_image %}
                      {% comment %} Priority 1: Block custom image {% endcomment %}
                      <img 
                        src="{{ block.settings.custom_image | image_url: width: 400 }}"
                        srcset="{{ block.settings.custom_image | image_url: width: 200 }} 200w,
                                {{ block.settings.custom_image | image_url: width: 400 }} 400w,
                                {{ block.settings.custom_image | image_url: width: 600 }} 600w"
                        sizes="(min-width: 750px) 33vw, 50vw"
                        alt="{{ block.settings.custom_image.alt | default: product.title }}"
                        loading="lazy"
                        width="{{ block.settings.custom_image.width }}"
                        height="{{ block.settings.custom_image.height }}"
                      >
                    {% elsif product.metafields.custom.main_image %}
                      {% comment %} Priority 2: Product metafield image {% endcomment %}
                      <img 
                        src="{{ product.metafields.custom.main_image | image_url: width: 400 }}"
                        srcset="{{ product.metafields.custom.main_image | image_url: width: 200 }} 200w,
                                {{ product.metafields.custom.main_image | image_url: width: 400 }} 400w,
                                {{ product.metafields.custom.main_image | image_url: width: 600 }} 600w"
                        sizes="(min-width: 750px) 33vw, 50vw"
                        alt="{{ product.metafields.custom.main_image.alt | default: product.title }}"
                        loading="lazy"
                        width="{{ product.metafields.custom.main_image.width }}"
                        height="{{ product.metafields.custom.main_image.height }}"
                      >
                    {% elsif product.featured_image %}
                      {% comment %} Priority 3: Product featured image {% endcomment %}
                      <img 
                        src="{{ product.featured_image | image_url: width: 400 }}"
                        srcset="{{ product.featured_image | image_url: width: 200 }} 200w,
                                {{ product.featured_image | image_url: width: 400 }} 400w,
                                {{ product.featured_image | image_url: width: 600 }} 600w"
                        sizes="(min-width: 750px) 33vw, 50vw"
                        alt="{{ product.featured_image.alt | default: product.title }}"
                        loading="lazy"
                        width="{{ product.featured_image.width }}"
                        height="{{ product.featured_image.height }}"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                  <div class="nue-product-slide-info">
                    <h3 class="nue-product-slide-title">{{ product.title }}</h3>
                  </div>
                </a>
              {% else %}
                <div class="nue-product-slide-placeholder">
                  {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
                  <div class="nue-product-slide-info">
                    <h3 class="nue-product-slide-title">Product {{ forloop.index }}</h3>
                  </div>
                </div>
              {% endif %}
            </div>
          {% endfor %}

          {% comment %} Duplicate for loop effect {% endcomment %}
          {% for block in section.blocks %}
            {% assign product = block.settings.product %}
            <div class="swiper-slide" {{ block.shopify_attributes }}>
              {% if product != blank %}
                <a href="{{ product.url }}" class="nue-product-slide-link">
                  <div class="nue-product-slide-image">
                    {% if block.settings.custom_image %}
                      {% comment %} Priority 1: Block custom image {% endcomment %}
                      <img 
                        src="{{ block.settings.custom_image | image_url: width: 400 }}"
                        srcset="{{ block.settings.custom_image | image_url: width: 200 }} 200w,
                                {{ block.settings.custom_image | image_url: width: 400 }} 400w,
                                {{ block.settings.custom_image | image_url: width: 600 }} 600w"
                        sizes="(min-width: 750px) 33vw, 50vw"
                        alt="{{ block.settings.custom_image.alt | default: product.title }}"
                        loading="lazy"
                        width="{{ block.settings.custom_image.width }}"
                        height="{{ block.settings.custom_image.height }}"
                      >
                    {% elsif product.metafields.custom.main_image %}
                      {% comment %} Priority 2: Product metafield image {% endcomment %}
                      <img 
                        src="{{ product.metafields.custom.main_image | image_url: width: 400 }}"
                        srcset="{{ product.metafields.custom.main_image | image_url: width: 200 }} 200w,
                                {{ product.metafields.custom.main_image | image_url: width: 400 }} 400w,
                                {{ product.metafields.custom.main_image | image_url: width: 600 }} 600w"
                        sizes="(min-width: 750px) 33vw, 50vw"
                        alt="{{ product.metafields.custom.main_image.alt | default: product.title }}"
                        loading="lazy"
                        width="{{ product.metafields.custom.main_image.width }}"
                        height="{{ product.metafields.custom.main_image.height }}"
                      >
                    {% elsif product.featured_image %}
                      {% comment %} Priority 3: Product featured image {% endcomment %}
                      <img 
                        src="{{ product.featured_image | image_url: width: 400 }}"
                        srcset="{{ product.featured_image | image_url: width: 200 }} 200w,
                                {{ product.featured_image | image_url: width: 400 }} 400w,
                                {{ product.featured_image | image_url: width: 600 }} 600w"
                        sizes="(min-width: 750px) 33vw, 50vw"
                        alt="{{ product.featured_image.alt | default: product.title }}"
                        loading="lazy"
                        width="{{ product.featured_image.width }}"
                        height="{{ product.featured_image.height }}"
                      >
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                  <div class="nue-product-slide-info">
                    <h3 class="nue-product-slide-title">{{ product.title }}</h3>
                  </div>
                </a>
              {% else %}
                <div class="nue-product-slide-placeholder">
                  {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
                  <div class="nue-product-slide-info">
                    <h3 class="nue-product-slide-title">Product {{ forloop.index }}</h3>
                  </div>
                </div>
              {% endif %}
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>
<script src="{{ 'nue-product-slider.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Nue Product Slider",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bestsellers"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "When a collection is selected, it will override the individual product blocks"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 142,
      "step": 2,
      "unit": "px",
      "label": "Desktop padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 142,
      "step": 2,
      "unit": "px",
      "label": "Desktop padding bottom",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile padding top",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile padding bottom",
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom image",
          "info": "Overrides the product's featured image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Nue Product Slider",
      "category": "Products",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}