{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  #product-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 20px;
  }

  .full-width-grid-item {
    grid-column: 1 / -1;
  }

  /* Adjust full-width-promo-card when used in grid cell */
  #product-grid li:not(.full-width-grid-item) .full-width-promo-card {
    height: 100%;
    min-height: 400px;
  }
  
  #product-grid li:not(.full-width-grid-item) .full-width-promo-card__content {
    padding: 40px 30px;
  }
  
  #product-grid li:not(.full-width-grid-item) .full-width-promo-card__heading {
    font-size: 24px;
  }
  
  /* Double promo card - spans 2 columns on desktop */
  .promo-card-double-wrapper {
    grid-column: span 1;
  }


@media screen and (min-width: 750px) {
  #product-grid {
    gap: 50px;
    grid-template-columns: 1fr 1fr ; 
  }
  
  .promo-card-double-wrapper {
    grid-column: span 2;
  }
}


  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    #product-grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: 50px;
    }
    
    /* Desktop adjustments for full-width-promo-card in grid */
    #product-grid li:not(.full-width-grid-item) .full-width-promo-card__content {
      padding: 56px;
      padding-left: 0;
      padding-right: 30px;
    }

    .full-width-promo-card--side .full-width-promo-card__image{
      padding-right: 20px;
    }
    
    #product-grid li:not(.full-width-grid-item) .full-width-promo-card__heading {
      /* font-size: 32px; */
      font-size: 40px;
      line-height: 48px;
    }
    
    /* Ensure double promo card spans correctly in 3-column grid */
    .promo-card-double-wrapper {
      grid-column: span 2;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  {%- paginate collection.products by section.settings.products_per_page -%}
    <div class="">

      <div
        class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        id="ProductGridContainer"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
        {% endif %}
      >
        {%- if collection.products.size == 0 -%}
          <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
            <div class="loading-overlay gradient"></div>
            <div class="title-wrapper center">
              <h2 class="title title--primary">
                {{ 'sections.collection_template.empty' | t -}}
                <br>
                {{
                  'sections.collection_template.use_fewer_filters_html'
                  | t: link: collection.url, class: 'underlined-link link'
                }}
              </h2>
            </div>
          </div>
        {%- else -%}
          <div
            class="collection page-width"
          >
            <div class="loading-overlay gradient"></div>
            <ul
              id="product-grid"
              data-id="{{ section.id }}"
              class="grid product-grid"
            >
              {%- assign promo_blocks = section.blocks | where: 'type', 'promo_card' -%}
              {%- assign side_promo_blocks = section.blocks | where: 'type', 'promo_card_side' -%}
              {%- assign double_promo_blocks = section.blocks | where: 'type', 'promo_card_double' -%}
              {%- assign full_width_blocks = section.blocks | where: 'type', 'full_width_promo' -%}
              
              {%- comment -%} Combine all promo card types {%- endcomment -%}
              {%- assign all_promo_blocks = promo_blocks | concat: side_promo_blocks | concat: double_promo_blocks -%}
              {%- assign active_promo_blocks = all_promo_blocks -%}
              {%- assign item_count = 0 -%}
              {%- assign current_row = 1 -%}
              {%- assign items_per_row = 2 -%}
              {%- if section.settings.columns_desktop == '3' -%}
                {%- assign items_per_row = 3 -%}
              {%- endif -%}
              
              {%- comment -%} Check for full-width promos at row 1 {%- endcomment -%}
              {%- for fw_block in full_width_blocks -%}
                {%- if fw_block.settings.row_position == 1 -%}
                  <li class="full-width-grid-item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    {% if settings.animations_reveal_on_scroll %}
                      data-cascade
                      style="--animation-order: 0;"
                    {% endif %}
                  >
                    {% render 'full-width-promo-card', block: fw_block, lazy_load: false %}
                  </li>
                {%- endif -%}
              {%- endfor -%}
              
              {%- assign product_index = 0 -%}
              {%- for product in collection.products -%}
                {%- assign product_index = product_index | plus: 1 -%}
                
                {%- comment -%} Check if we should insert a promo card before this product {%- endcomment -%}
                {%- for block in active_promo_blocks -%}
                  {%- if block.settings.position == product_index -%}
                    {%- if block.type == 'promo_card_double' -%}
                      {%- assign item_count = item_count | plus: 2 -%}
                    {%- else -%}
                      {%- assign item_count = item_count | plus: 1 -%}
                    {%- endif -%}
                    
                    {%- comment -%} Check if this new item starts a new row {%- endcomment -%}
                    {%- assign new_row = item_count | minus: 1 | divided_by: items_per_row | plus: 1 -%}
                    {%- if new_row > current_row -%}
                      {%- assign current_row = new_row -%}
                      {%- for fw_block in full_width_blocks -%}
                        {%- if fw_block.settings.row_position == current_row -%}
                          <li class="full-width-grid-item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                            {% if settings.animations_reveal_on_scroll %}
                              data-cascade
                              style="--animation-order: {{ item_count }};"
                            {% endif %}
                          >
                            {% render 'full-width-promo-card', block: fw_block, lazy_load: true %}
                          </li>
                        {%- endif -%}
                      {%- endfor -%}
                    {%- endif -%}
                    
                    <li
                      class="{% if block.type == 'promo_card_double' %}promo-card-double-wrapper {% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                      {% if settings.animations_reveal_on_scroll %}
                        data-cascade
                        style="--animation-order: {{ item_count }};"
                      {% endif %}
                    >
                      {%- if block.type == 'promo_card_side' -%}
                        {% render 'full-width-promo-card', block: block, lazy_load: true, is_side_card: true %}
                      {%- elsif block.type == 'promo_card_double' -%}
                        {% render 'promo-card-double', block: block, lazy_load: true %}
                      {%- else -%}
                        {% render 'promo-card', block: block, lazy_load: true %}
                      {%- endif -%}
                    </li>
                  {%- endif -%}
                {%- endfor -%}
                
                {%- comment -%} Now render the product {%- endcomment -%}
                {%- assign item_count = item_count | plus: 1 -%}
                
                {%- comment -%} Check if this product starts a new row {%- endcomment -%}
                {%- assign new_row = item_count | minus: 1 | divided_by: items_per_row | plus: 1 -%}
                {%- if new_row > current_row -%}
                  {%- assign current_row = new_row -%}
                  {%- for fw_block in full_width_blocks -%}
                    {%- if fw_block.settings.row_position == current_row -%}
                      <li class="full-width-grid-item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                        {% if settings.animations_reveal_on_scroll %}
                          data-cascade
                          style="--animation-order: {{ item_count }};"
                        {% endif %}
                      >
                        {% render 'full-width-promo-card', block: fw_block, lazy_load: true %}
                      </li>
                    {%- endif -%}
                  {%- endfor -%}
                {%- endif -%}
                
                {%- comment -%} Render the product card {%- endcomment -%}
                {% assign lazy_load = false %}
                {%- if item_count > 2 -%}
                  {%- assign lazy_load = true -%}
                {%- endif -%}
                <li
                  class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}
                    data-cascade
                    style="--animation-order: {{ item_count }};"
                  {% endif %}
                >
                  {% render 'card-product-nue',
                    card_product: product,
                    section_id: section.id,
                    lazy_load: lazy_load,
                    layout: section.settings.product_card_type
                  %}
                </li>
              {%- endfor -%}
              
              {%- comment -%} Check if any promo cards should be inserted after all products {%- endcomment -%}
              {%- assign final_product_position = product_index | plus: 1 -%}
              {%- for block in active_promo_blocks -%}
                {%- if block.settings.position >= final_product_position -%}
                  {%- if block.type == 'promo_card_double' -%}
                    {%- assign item_count = item_count | plus: 2 -%}
                  {%- else -%}
                    {%- assign item_count = item_count | plus: 1 -%}
                  {%- endif -%}
                  
                  {%- comment -%} Check if this new item starts a new row {%- endcomment -%}
                  {%- assign new_row = item_count | minus: 1 | divided_by: items_per_row | plus: 1 -%}
                  {%- if new_row > current_row -%}
                    {%- assign current_row = new_row -%}
                    {%- for fw_block in full_width_blocks -%}
                      {%- if fw_block.settings.row_position == current_row -%}
                        <li class="full-width-grid-item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                          {% if settings.animations_reveal_on_scroll %}
                            data-cascade
                            style="--animation-order: {{ item_count }};"
                          {% endif %}
                        >
                          {% render 'full-width-promo-card', block: fw_block, lazy_load: true %}
                        </li>
                      {%- endif -%}
                    {%- endfor -%}
                  {%- endif -%}
                  <li
                    class="{% if block.type == 'promo_card_double' %}promo-card-double-wrapper {% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    {% if settings.animations_reveal_on_scroll %}
                      data-cascade
                      style="--animation-order: {{ block.settings.position }};"
                    {% endif %}
                  >
                    {%- if block.type == 'promo_card_side' -%}
                      {% render 'full-width-promo-card', block: block, lazy_load: true, is_side_card: true %}
                    {%- elsif block.type == 'promo_card_double' -%}
                      {% render 'promo-card-double', block: block, lazy_load: true %}
                    {%- else -%}
                      {% render 'promo-card', block: block, lazy_load: true %}
                    {%- endif -%}
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>

            {%- if paginate.pages > 1 -%}
              {% render 'pagination', paginate: paginate, anchor: '' %}
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endpaginate -%}
</div>

